INTEGER
    :    '-'?([1-9][0-9]*|'0'[Xx][0-9A-Fa-f]+|'0'[0-7]*)
    ;

DECIMAL
    :    '-'?(([0-9]+'.'[0-9]*|[0-9]*'.'[0-9]+)([Ee][+\-]?[0-9]+)?|[0-9]+[Ee][+\-]?[0-9]+)
    ;

IDENTIFIER
    :    [_\-]?[A-Za-z][0-9A-Z_a-z\-]*
    ;

STRING
    :    '"'~["]*'"'
    ;

WHITESPACE
    :    [\t\n\r ]+ -> skip
    ;

COMMENT
    :    (    '//' ~[\r\n]*
         |    '/*' .*? '*/'
         ) -> skip
    ;

OTHER
    :    ~[\t\n\r 0-9A-Za-z]
    ;
